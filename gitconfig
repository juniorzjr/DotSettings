[user]
	name = Danny
	email = xxxx
[core]
    autocrlf = false
    safecrlf = false
    excludesfile = ~/.gitignore
    pager = less
    editor = /usr/bin/vim
[color]
    ui = true
[push]
    default = current
[pull]
    default = current
[alias]
    hist = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --color --graph --abbrev-commit --date=short
    unstage = reset --
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
